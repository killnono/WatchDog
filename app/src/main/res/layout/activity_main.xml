<?xml version="1.0" encoding="utf-8" ?>


<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context="com.example.killnono.watchdog.MainActivity">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:textSize="@dimen/main_text_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/room"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:text="NASA"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                android:textSize="@dimen/main_text_size"
                android:layout_marginTop="8dp"
                android:drawableLeft="@mipmap/container"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20 person"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                android:textSize="@dimen/main_text_size"
                android:layout_marginTop="8dp"
                android:drawableLeft="@mipmap/monitor"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_info"
                android:text="投影仪，音响 "
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="WIFI_INFO:"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                android:visibility="gone"

                android:id="@+id/tv_wifi_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="IP_ADDRESS:"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_ip_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="10.0.0.1"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:background="@android:color/holo_blue_dark"
                android:layout_width="240dp"
                android:textSize="20sp"
                android:padding="8dp"
                android:textColor="@android:color/white"
                android:text="Remote Meetting"
                android:layout_height="wrap_content"/>
            <Button
                android:layout_marginLeft="32dp"
                android:padding="8dp"

                android:background="@android:color/holo_blue_dark"
                android:layout_width="240dp"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:text="Notice"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_turn_off"/>

            <TextView
                android:id="@+id/tv_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nobody in the Room"
                android:textSize="32dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout_constraintBottom_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_constraintRight_creator="1"
                tools:layout_constraintTop_creator="1"/>

        </LinearLayout>

</LinearLayout>
